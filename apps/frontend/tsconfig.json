{
  "extends": "next/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    "strict": true,
    "noEmit": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": ["node"],
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "src", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
