{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@doflow/common/*": ["packages/common/src/*"],
      "@doflow/telemetry": ["packages/telemetry/src/index.ts"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
